@model CRUDWebMVC.Models.Entity.Customer
@{
    ViewBag.Title = "Costumer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Id: @Model.Id</li>
    <li>Membership Type: @Model.MemberShipType</li>
    @if(Model.BirthDay.HasValue)
    {
        <li>Birthdate: @Model.BirthDay.Value.ToString("dd MMM yyyy")</li>
    }
</ul>