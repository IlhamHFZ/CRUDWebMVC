@model CRUDWebMVC.Models.Entity.Movie

@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("dd MMM yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dd MMM yyyy")</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>
<button type="button" class="btn btn-primary">
    @Html.ActionLink("Edit","Edit", new {Id = Model.Id})
</button>