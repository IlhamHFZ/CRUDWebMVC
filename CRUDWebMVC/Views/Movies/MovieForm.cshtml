@model CRUDWebMVC.Models.ViewModel.MovieFormViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Id != null)
{
    <h2>Edit Movie</h2>
}
else
{
    <h2>New Movie</h2>
}

@using(Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(mvo => mvo.Name)
        @Html.TextBoxFor(mvo => mvo.Name, new {@class = "form-control"})
    </div>
    <div>
        @Html.LabelFor(mvo => mvo.ReleaseDate)
        @Html.TextBoxFor(mvo => mvo.ReleaseDate, "{0:yyyy-MM-dd}", new {@class = "form-control", type = "date"})
    </div>
    <div>
        @Html.LabelFor(mvo => mvo.DateAdded)
        @Html.TextBoxFor(mvo => mvo.DateAdded, "{0:yyyy-MM-dd}", new {@class = "form-control", type = "date"})
    </div>
    <div>
        @Html.LabelFor(mvo => mvo.Stock)
        @Html.TextBoxFor(mvo => mvo.Stock, new {@class = "form-control"})
    </div>
    <div>
        @Html.LabelFor(mvo => mvo.GenreId)
        @Html.DropDownListFor(mvo => mvo.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre type", new {@class = "form-control"})
    </div>
    @Html.HiddenFor(mvo => mvo.Id)
    <button type="submit" class="btn btn-primary">
        Save
    </button>
}