@model IEnumerable<CRUDWebMVC.Models.Entity.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<button type="button" onclick="location.href='@Url.Action("Create", "Movies")'" class="btn btn-dark">
    Create
</button>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Detail", new {Id = movie.Id})
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    </tbody>
</table>